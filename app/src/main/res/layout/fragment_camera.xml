<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.prepod.photodistort.AutoFitTextureView
        android:id="@+id/texture_camera"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_camera_switchcam"
        android:layout_width="45dp"
        android:layout_above="@+id/frame_camera_control"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/swap" />


    <FrameLayout
        android:id="@+id/frame_camera_control"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/texture_camera"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <Button
            android:id="@+id/btn_camera_takepic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/take_photo" />




    </FrameLayout>

</RelativeLayout>